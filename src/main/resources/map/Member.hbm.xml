<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping
   PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <class name="Member" table="houseware.member">
        <id name="id" type="int" column="id"/>

        <property name="name" type="string" column="name"/>
        <property name="nachname" type="string" column="nachname"/>
        <property name="gender" type="boolean" column="gender"/>
        <property name="age" type="int" column="age"/>
        <property name="bemerkung" type="string" column="bemerkung"/>
        <one-to-many name="country" class="Country" column="countryId"/>

    </class>
    <sql-query name="findAll">	
	<![CDATA[select * from Member m join country co ON m.country_id = co.country_id]]>
        <return alias="m" class="eu.papenhagen.klassenliste.entity.Member"/>
        <return-join alias="co" property="m.country_id"></return-join>
    </sql-query>  
 
</hibernate-mapping>    